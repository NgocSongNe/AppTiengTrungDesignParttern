<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/dichnghia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dịch nghĩa"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/phienam"
        app:layout_constraintTop_toBottomOf="@+id/phienam" />

    <TextView
        android:id="@+id/phienam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Phiên âm"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/caunoi"
        app:layout_constraintTop_toBottomOf="@+id/caunoi" />

    <TextView
        android:id="@+id/caunoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        android:text="Câu nói"
        android:textColor="@color/black"
        android:textStyle="bold" />
</androidx.constraintlayout.widget.ConstraintLayout>